{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts", "**/*.d.ts", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
}
